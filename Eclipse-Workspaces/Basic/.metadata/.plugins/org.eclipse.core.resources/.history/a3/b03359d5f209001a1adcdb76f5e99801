package com.firtsproject.basics;

public class Mobile {
	public static void main(String[] args) {
		MobileDetails details=new MobileDetails();
		details.getSims();
		details.getModel();
		details.getCharging();
	}
}

/**
 * @author User
 *
 */
class MobileDetails{
	
	private int sims;
	private String model;
	private int charging;
	public int getSims() {
		return sims;
	}
	public void setSims(int sims) {
		if(sims==1 || sims==2){
		this.sims = sims;
		}
		else{
			System.out.println("invalid sim selection");
		}
	}
	public String getModel() {
		return model;
	}
	public void setModel(String model) {
		this.model = model;
	}
	public int getCharging() {
		return charging;
	}
	public void setCharging(int charging) {
		if(charging>=1 && charging <=100)
		this.charging = charging;
		else{
			System.out.println("value not accepted");
		}
	}

}
